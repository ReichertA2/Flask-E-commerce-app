{% extends 'base.html.j2'%}

{% block css %}
    <link rel="stylesheet" href="{{url_for('static', filename='css/item.css')}}">
{% endblock %}

{% block title %}
Movies
{% endblock %}


{% block content %}
<div class="body">
<h1 class="glow_effect">Here is your Selection</h1>



  <div class="card h-100" style="width: 20rem; display: inline-block; width: 19%">
    <div class="for_image">
      <img src="{{movies.img}}"  class="card-img-top" alt="...">
    </div>
    <div class="card-body">
      <h4 class="card-title text-center">{{movies.name}}</h4>

    </div>
    <table class="table table-borderless " style="text-align: right; width: 75%; margin:0px auto;" >
        <tbody>
        <tr>
          <td scope="col">Desc</th>
          <td>{{movies.desc}}</td>
        </tr>
        <tr>
          <td scope="col">Price</th>
          <td>{{movies.price}}</td>
        </tr>
        
      </tbody>
    </table>

    <div class="card-body"> 
    {% if current_user.is_authenticated %}
      <a href="{{url_for('main.cart_add', id=movies.item_id)}}" class="card-link">Add to cart</a>
    {% endif %}
     </div>

  </div>

{% endblock %}

